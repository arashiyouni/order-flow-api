generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model user {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  username      String
  password      String
  role      Role     @default(USER)
}

model Order {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  scheduleDeliveryDate DateTime @default(now())
  name      String
  lastname String
  email String 
  phone String @default("000 0000 0000")
  deliveryAddress String
  state String
  city String
  instructions String

  OrderPerUser OrderPerUser[]
}

model OrderPerUser {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  weight    Float
  length    Float
  height    Float
  width     Float
  description String
  orderId   String @db.ObjectId
  order     Order  @relation(fields: [orderId], references: [id])
}


model State {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
}


model City {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
}

enum Role {
  USER
  ADMIN
}